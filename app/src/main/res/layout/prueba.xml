<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:gravity="left"
    android:orientation="vertical">

    <TextView
        android:layout_width="411dp"
        android:layout_height="45dp"
        android:layout_gravity="left"
        android:layout_padding="12"
        android:background="#777373"
        android:gravity="center|start"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:text="demo"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        style="@style/Widget.AppCompat.Button"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="16dp"
        android:background="#806C6C"
        android:text="START_SERVICE"
        android:textColor="#000000"
        android:textColorHighlight="#717171"
        android:textColorLink="#958E8E"
        android:theme="@style/GrayButton"/>

    <Button
        style="@style/Widget.AppCompat.Button"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="16dp"
        android:background="#593B3B"
        android:clickable="true"
        android:text="PAUSE_SERVICE"
        android:textColor="#000000" />

    <Button
        style="@style/Widget.AppCompat.Button"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="16dp"
        android:background="#453232"
        android:text="STOP_SERVICE"
        android:textColor="#000000" />

</LinearLayout>